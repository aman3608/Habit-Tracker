<div class="w-100 d-flex flex-column justify-content-between align-items-center">
  <!-- container -->
  <div id="addHabitContainer"
    class="container d-flex flex-column justify-content-around align-item shadow rounded mt-1 p-4">
    <h1>Add Habits</h1>
    <div class="modal-body">
      <form id="habitForm" action="/create-habit" method="post">
        <!-- input and label -->
        <div class="mb-3">
          <!-- input for habit name -->
          <input type="text" name="name" class="form-control" id="name" placeholder="Enter Name" required />
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <!-- submit -->
      <button id="btn" type="submit" form="habitForm" class="btn btn-success">
        Add
      </button>
    </div>
  </div>

  <!-- show list of all the habits added by the user -->
  <div id="habitList" class="container mb-2 overflow-y-scroll overflow-x-hidden p-1 px-2 rounded shadow-sm">
    <!-- heading -->
    <h1 class="text-center">Your Habit List</h1>

    <!-- list of all the habits -->
    <% for (let i of myHabits) { %>

      <!-- card of a single habit -->
      <div
        class="w-100 h-auto d-flex justify-content-between align-items-center text-white my-2 p-2 shadow-sm rounded fw-bold list-item">
        <!-- name of habit -->
        <div class="px-1">
          <%= i.name %>
        </div>

        <!-- number of days on which the task is done in past week -->
        <!-- task status for today -->
        <div class="px-1">
          <%= i.completedDays %> / 7 Days | Today: <%= i.weeklyStatus[6]==='true' ? 'Done' : 'Not Done' %>
        </div>
      </div>

      <% } %>
  </div>
</div>